@page
@model WebClinic.Pages.Animais.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Cadastro de animais</h2>

<p>
    <a asp-page="Create"><input type="button" class="btn btn-primary" value="Cadastrar animal"></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Nome)
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                Espécie
            </th>
            <th>
                Raça
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Sexo)
            </th>
            <th>
                Proprietário
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Animal.OrderBy(e => e.Nome)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proprietario.Nome)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Alterar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Inspecionar</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
