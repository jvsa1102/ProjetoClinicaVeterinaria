@page
@model WebClinic.Pages.Procedimentos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Alterar procedimento</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Procedimento.ID" />
            <div class="form-group">
                <label asp-for="Procedimento.DataRealizacao" class="control-label">Data de realização</label>
                <input asp-for="Procedimento.DataRealizacao" class="form-control" />
                <span asp-validation-for="Procedimento.DataRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procedimento.Status" class="control-label"></label>
                <input asp-for="Procedimento.Status" class="form-control" />
                <span asp-validation-for="Procedimento.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procedimento.Pagamento" class="control-label"></label>
                <input asp-for="Procedimento.Pagamento" class="form-control" />
                <span asp-validation-for="Procedimento.Pagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procedimento.TipoProcedimentoID" class="control-label">Tipo de procedimento</label>
                <select asp-for="Procedimento.TipoProcedimentoID" class="form-control" asp-items="ViewBag.TipoProcedimentoID"></select>
                <span asp-validation-for="Procedimento.TipoProcedimentoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procedimento.MedicoID" class="control-label">Médico Responsável</label>
                <select asp-for="Procedimento.MedicoID" class="form-control" asp-items="ViewBag.MedicoID"></select>
                <span asp-validation-for="Procedimento.MedicoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procedimento.AnimalID" class="control-label">Animal</label>
                <select asp-for="Procedimento.AnimalID" class="form-control" asp-items="ViewBag.AnimalID"></select>
                <span asp-validation-for="Procedimento.AnimalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
